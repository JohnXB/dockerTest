<%= form_for([@user,@user.articles.build]) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> 禁止这篇文章被保存:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :标题 %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :内容 %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit :保存 %>
  </p>
<% end %>